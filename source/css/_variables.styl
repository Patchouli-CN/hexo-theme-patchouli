// Colors
:root {
  // ===== 帕秋莉浅色模式配色 =====
  --red-0: #6a0dad;
  --red-1: #8A2BE2;          // 主强调色（链接、按钮）
  --red-2: #9a4de3;
  --red-3: #b19cd9;          // 边框、分隔线
  --red-4: #d8c2f0;
  --red-5: #f0e6ff;
  --red-5-5: #f8f4ff;
  --red-6: #fcfaff;

  --grey-9: #888;
  --grey-7: var(--color-default);
  --color-archive-year: #2c1e5f;
  --color-default: #2c1e5f;           // 文字主色（带紫调黑）
  --color-border: var(--red-3);
  --color-link: var(--red-1);
  --color-background: #f9f7ff;        // 页面背景
  --color-code-background: #faf8ff;
  --color-header-background: rgba(255, 255, 255, 0.95);
  --color-footer-background: #ffffff;
  --color-mobile-nav-background: #ffffff;
  --color-wrap: #ffffff;
  --color-sticky: #ffffff;
  --color-h2-border: #f0e6ff;
  --color-meta-shadow: var(--red-6);
  --color-hover-shadow: rgba(138, 43, 226, 0.15);
  --color-h2-after: var(--red-1);     // h2 下划线高亮
  --color-red-6-shadow: rgba(138, 43, 226, 0.6);
  --color-red-3-shadow: rgba(177, 156, 217, 0.4);

  // 代码高亮 - 使用紫色系
  --highlight-nav: #8A2BE2;
  --highlight-scrollbar: #b19cd9;
  --highlight-background: #f8f4ff;
  --highlight-selection: rgba(138, 43, 226, 0.3);
  --highlight-foreground: #2c1e5f;
  --highlight-comment: #9a4de3;
  --highlight-red: #ff6b6b;           // 保留错误红（可选）
  --highlight-orange: #ff9e6d;
  --highlight-yellow: #ffd166;
  --highlight-green: #06d6a0;
  --highlight-aqua: #118ab2;
  --highlight-blue: #073b4c;
  --highlight-purple: #8A2BE2;        // 紫色用于关键字
  --highlight-deletion: #ff6b6b;
  --highlight-deletion-bg: rgba(255, 107, 107, 0.1);
  --highlight-addition: #06d6a0;
  --highlight-addition-bg: rgba(6, 214, 160, 0.1);

  if (cursor-enabled) {
    --cursor-default: url(cursor-default), auto;
    --cursor-pointer: url(cursor-pointer), pointer;
    --cursor-text: url(cursor-text), text;
  } else {
    --cursor-default: default;
    --cursor-pointer: pointer;
    --cursor-text: text;
  }

  --footer-icon: url(footer-icon);
  --sponsor-icon: url(sponsor-icon);
  --top-icon: url(top-icon);
  --shadow-meta: 0 0 5px 2px var(--color-meta-shadow);
  --shadow-meta-hover: 0 0 6px 4px var(--color-meta-shadow);
  --shadow-card: 0 0 10px 2px var(--color-hover-shadow);
  --shadow-card-hover: 0 0 10px 4px var(--color-hover-shadow);
  --shadow-red-6-shadow: 0 0 8px var(--color-red-6-shadow);
}

[data-theme='dark'] {
  &:root {
    // ===== 帕秋莉深色模式配色 =====
    --red-0: #8A2BE2;
    --red-1: #a78bfa;
    --red-2: #c4b5fd;
    --red-3: rgba(177, 156, 217, 0.6);
    --red-4: rgba(216, 194, 240, 0.4);
    --red-5: rgba(240, 230, 255, 0.2);
    --red-5-5: rgba(248, 244, 255, 0.1);
    --red-6: rgba(252, 250, 255, 0.2);

    --color-archive-year: #b19cd9;
    --color-default: #e0d6ff;
    --color-border: var(--red-5);
    --color-background: #1e1b4b;        // 深紫蓝（帕秋莉书房）
    --color-code-background: rgba(39, 35, 90, 0.6);
    --color-header-background: #222222;
    --color-footer-background: #1e1b4b;
    --color-mobile-nav-background: #27235a;
    --color-wrap: #27235a;              // 卡片深紫
    --color-h2-border: #47476a;
    --color-meta-shadow: rgba(0, 0, 0, 0.3);
    --color-hover-shadow: rgba(0, 0, 0, 0.3);
    
    // 深色模式高亮
    --highlight-nav: #a78bfa;
    --highlight-scrollbar: #6a0dad;
    --highlight-background: #27235a;
    --highlight-selection: rgba(167, 139, 250, 0.3);
    --highlight-foreground: #e0d6ff;
    --highlight-comment: #c4b5fd;
    --highlight-red: #ff8181;
    --highlight-orange: #ffad6d;
    --highlight-yellow: #ffe066;
    --highlight-green: #3ae6b7;
    --highlight-aqua: #4dc4d9;
    --highlight-blue: #4a86e8;
    --highlight-purple: #a78bfa;
    --highlight-deletion: #ff8181;
    --highlight-deletion-bg: rgba(255, 129, 129, 0.15);
    --highlight-addition: #3ae6b7;
    --highlight-addition-bg: rgba(58, 230, 183, 0.15);

    img {
      filter: brightness(70%);
    }

    .pswp__img {
      opacity: 1;
      filter: none;
      animation: none;
    }

    img.lazyloaded {
      opacity: 1;
      animation: blur-darken 0.8s ease-in-out forwards;
    }
  }
}

// Fonts
font-basic = unquote(custom-article-families) unquote(article-families) unquote(local-article-families);
font-code = unquote(custom-code-families) unquote(code-families) unquote(local-code-families);
font-size = 14px;
line-height = 1.67;
line-height-title = 1.2em;

// Header
logo-size = 40px;
subtitle-size = 18px;
banner-height = 35vh;
sidebar = postHasSidebar || hexo-config('sidebar');

// Layout
article-padding = 20px;
mobile-nav-width = 280px;

// Media queries
mq-mobile = 'screen and (max-width: 479px)';
no-mobile = 'screen and (min-width: 480px)';
mq-tablet = 'screen and (min-width: 480px) and (max-width: 767px)';
mq-normal = 'screen and (min-width: 768px)';
mg-normal = 'screen and (max-width: 767px)';
mq-large = 'screen and (min-width: 960px)';
mg-large = 'screen and (max-width: 959px)';
mq-extra-large = 'screen and (min-width: 1242px)';
mg-extra-large = 'screen and (max-width: 1241px)';

post-radius = 12px;
tag-radius = 8px;